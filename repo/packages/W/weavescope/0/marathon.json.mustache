{
  "id": "/weavescope",
  "cpus": 2,
  "mem": 1024,
  "instances": {{weavescope.app.instances}},
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{resource.assets.container.docker.e2b69668d4e5}}",
      "forcePullImage": false
    }
  },
  "args": [
    "--no-probe"
  ],
  "ports": [
    4040
  ],
  "requirePorts": true,
  "labels": {
    "DCOS_SERVICE_NAME": "weavescope",
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_PORT_INDEX": "0"
  }
}
