{
  "properties": {
    "scale": {
      "properties": {
        "framework-name": {
          "type": "string",
          "description": "The name of the framework. MUST BE LOWERCASE!",
          "default": "scale"
        },
        "master": {
          "type": "string",
          "description": "Mesos Master",
          "default": "zk://master.mesos:2181/mesos"
        },
        "use-x-forwarded-host": {
          "type": "string",
          "description": "Use X Forwarded Host",
          "default": "True"
        },
        "secret-key": {
          "type": "string",
          "description": "Scale Secret key",
          "default": "15tryuv4t3hugbv7890aQ"
        },
        "allowed-hosts": {
          "type": "string",
          "description": "Allowed Hosts",
          "default": "*"
        },
        "time-zone": {
          "type": "string",
          "description": "Time Zone",
          "default": "UTC"
        },
        "postgis-template": {
          "type": "string",
          "description": "PostGIS Template",
          "default": "template_postgis"
        },
        "db-name": {
          "type": "string",
          "description": "DB Name",
          "default": "scale"
        },
        "db-user": {
          "type": "string",
          "description": "DB User",
          "default": "scale"
        },
        "db-pass": {
          "type": "string",
          "description": "DB Password",
          "default": "scale"
        },
        "db-host": {
          "type": "string",
          "description": "DB Hostname",
          "default": "scale-db.marathon.slave.mesos"
        },
        "db-port": {
          "type": "string",
          "description": "DB Port",
          "default": "5432"
        },
        "node-work-dir": {
          "type": "string",
          "description": "Worker Node Working Directory",
          "default": "/scale_data"
        },
        "metrics-dir": {
          "type": "string",
          "description": "Shared Directory for Metrics",
          "default": "/tmp"
        },
        "deploy-db": {
          "type": "string",
          "description": "Deploy the dockerized postgres DB (true or false). Must supply db-host, db-user, db-pass, and db-port",
          "default": "true"
        },
        "nfs-postgres-uid": {
          "type": "string",
          "description": "UID of network postgres user",
          "default": "26"
        },
        "nfs-postgres-gid": {
          "type": "string",
          "description": "GID of network postgres user",
          "default": "26"
        },
        "db-host-vol": {
          "type": "string",
          "description": "Path to persistent storage",
          "default": ""
        },
        "vhost-name": {
          "type": "string",
          "description": "Virtual Hostname for Marathon-LB",
          "default": "marathon-lb.marathon.mesos"
        }
      },
      "required": ["framework-name"],
      "type": "object"
    }
  },
  "type": "object"
}

